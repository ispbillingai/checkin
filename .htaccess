
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # For the root URL: Serve MinimalPage.html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^$ /src/pages/MinimalPage.html [L]
</IfModule>

# PHP error settings
php_flag display_errors on
php_value error_reporting E_ALL

# Ensure JavaScript files have the correct MIME type
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType text/html .html
</IfModule>

# Force correct MIME types for JS files to prevent "Unexpected token '<'" errors
<FilesMatch "\.js$">
    ForceType application/javascript
</FilesMatch>

# Force correct MIME types for HTML template files
<FilesMatch "\.html$">
    ForceType text/html
</FilesMatch>

# Add proper caching headers for development (disable caching)
<IfModule mod_headers.c>
    <FilesMatch "\.(js|css|html)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>
